<div class="text-center">
  <h1>授業の登録</h1>
</div>

<div class="row">
  <div class="col-md-6 col-md-offset-3">

    <%= form_for(@lecture_name) do |l| %>

      <div class="form-group">
        <%= l.label :content, 'Name' %>
        <%= l.text_field :content, class: 'form-control' %>
      </div>

      <%= l.submit '登録', class: 'btn btn-primary btn-block' %>
    <% end %>
  </div>
</div>

<p><%= link_to '授業一覧ページへ', lecture_names_path, class: 'btn btn-primary' %></p>